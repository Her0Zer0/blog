---
import Navbar from "../components/Navbar.astro"
import Footer from '../components/Footer.astro'
import logo from '../assets/logo/icononly_transparent.png'
const {title} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={logo.src} />
		<meta name="generator" content={Astro.generator} />
		<title>Built Bit By Bit {title? `| ${title}` : ''}</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/blog/assets/css/style.css"/>
	</head>
	<body>
		<div class="position-relative">
			<a id="upArrow" class="position-fixed top-anchor btn btn-primary rounded-pill" href="#">
				<svg xmlns="http://www.w3.org/2000/svg" 
				viewBox="0 0 384 512"
				class="top-page-arrow"> 
					<path 
					style="fill: #fffff5"
					d="M214.6 41.4c-12.5-12.5-32.8-12.5-45.3 0l-160 160c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L160 141.2 160 448c0 17.7 14.3 32 32 32s32-14.3 32-32l0-306.7L329.4 246.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3l-160-160z"/>
				</svg>
			</a>
		</div>
		<div class="container">
			<div class="row">
				<Navbar/>
				<slot />
				<Footer/>
			</div>
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		<script>
			document.addEventListener('scroll', (e)=>{
				console.log(e)
				const upArrow = document.getElementById('upArrow');

				if(!upArrow) return;
				if(window.scrollY > 500){
					upArrow.style.opacity = '1';
				}else{
					upArrow.style.opacity = '0';
				}
			})

			/**
			 * Because we are using markdown links we need to add events to open 
			 * those links in new tabs. 
			 */

			 const embeddedAnchors = document.querySelectorAll('p a')
			 for(let link of embeddedAnchors){
				link.addEventListener('click', (e)=>{
					e.preventDefault();
					window.open(e.target.href, '_blank');
				})
			 }
		</script>
	</body>
</html>
<style>
	.top-anchor{
		z-index: 1000;
		width: 50px;
		height: 50px;
		bottom: 30px;
		right: 10%;
		opacity: 0;
		transition: all .5s ease;
	}

	.top-page-arrow{
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 28px;
		height: 28px;
	}
</style>
